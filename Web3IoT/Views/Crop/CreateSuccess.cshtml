@model Web3IoT.Models.Crop

@{
    ViewData["Title"] = "Đăng ký thành công";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Đăng ký cây trồng thành công!</h2>
                    
                    <div class="mb-4">
                        <h4>Thông tin cây trồng:</h4>
                        <p><strong>Tên cây trồng:</strong> @Model.Name</p>
                        <p><strong>Vị trí:</strong> @Model.Location</p>
                        <p><strong>Mã cây trồng:</strong> @Model.CropCode</p>
                    </div>

                    <div class="mb-4">
                        <h4>Mã QR truy xuất nguồn gốc:</h4>
                        <img src="data:image/png;base64,@ViewBag.QRCodeBase64" alt="QR Code" class="img-fluid" style="max-width: 200px; margin: 20px auto;" />
                        <p class="text-muted">Quét mã QR để xem thông tin truy xuất nguồn gốc</p>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 