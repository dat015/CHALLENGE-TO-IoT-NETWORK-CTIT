@model Web3IoT.Models.Pesticide

@{
    var crop = ViewData["Crop"] as Web3IoT.Models.Crop;
}

<form asp-action="Spray" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CropCode" class="control-label"></label>
        <input asp-for="CropCode" class="form-control" type="number" readonly="readonly" />
        <span asp-validation-for="CropCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Timestamp" class="control-label"></label>
        <input asp-for="Timestamp" class="form-control" type="date" />
        <span asp-validation-for="Timestamp" class="text-danger"></span>
    </div>
</form>