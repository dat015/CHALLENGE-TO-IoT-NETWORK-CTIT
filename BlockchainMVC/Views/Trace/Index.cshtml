@model BlockchainMVC.Models.Crop
@{
    ViewData["Title"] = "Truy xuất nguồn gốc";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-success">
                <i class="fas fa-search me-2"></i>Truy xuất nguồn gốc
            </h2>
            <p class="lead">Nhập mã sản phẩm hoặc quét mã QR để xem thông tin chi tiết</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card border-success mb-4">
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="code" class="form-control form-control-lg" placeholder="Nhập mã sản phẩm">
                            <button class="btn btn-success" type="submit">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#scanQRModal">
                                <i class="fas fa-qrcode me-2"></i>Quét mã QR
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (Model != null)
        {
            <div class="col-md-6">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-seedling me-2"></i>Thông tin sản phẩm
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Tên sản phẩm:</strong></p>
                                <p>@Model.Name</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Loại cây:</strong></p>
                                <p>@Model.Type</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Giống cây:</strong></p>
                                <p>@Model.Variety</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Vị trí trồng:</strong></p>
                                <p>@Model.Location</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Ngày trồng:</strong></p>
                                <p>@Model.DatePlanted?.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Ngày thu hoạch:</strong></p>
                                <p>@Model.DateHarvested?.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Trạng thái:</strong></p>
                                <p>@Model.Status</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Cập nhật lúc:</strong></p>
                                <p>@Model.LastUpdate.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>

                        @if (Model.Sensor != null)
                        {
                            <div class="mt-4">
                                <h6 class="text-success">
                                    <i class="fas fa-microchip me-2"></i>Thông tin cảm biến
                                </h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Tên cảm biến:</strong></p>
                                        <p>@Model.Sensor.Name</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Loại cảm biến:</strong></p>
                                        <p>@Model.Sensor.Type</p>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="mt-4">
                            <h6 class="text-success">
                                <i class="fas fa-shield-alt me-2"></i>Thông tin blockchain
                            </h6>
                            <p><strong>Mã hash khối:</strong></p>
                            <p class="text-break">@Model.BlockHash</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- QR Scanner Modal -->
<div class="modal fade" id="scanQRModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quét mã QR</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="reader"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/html5-qrcode"></script>
    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // Redirect to trace page with the scanned code
            window.location.href = `/Trace?code=${decodedText}`;
        }

        function onScanFailure(error) {
            // Handle scan failure
            console.warn(`QR scan failed: ${error}`);
        }

        let html5QrcodeScanner = new Html5QrcodeScanner(
            "reader",
            { 
                fps: 10,
                qrbox: {width: 250, height: 250},
            },
            false
        );

        html5QrcodeScanner.render(onScanSuccess, onScanFailure);
    </script>
} 