@model IEnumerable<BlockchainMVC.Models.Plant>
@{
    ViewData["Title"] = "Quản lý Cây trồng";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-tree me-2"></i>Quản lý Cây trồng</h2>
            <p class="text-muted">Danh sách các cây trồng đã đăng ký trong hệ thống</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Register" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Đăng ký Cây trồng mới
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã cây</th>
                            <th>Tên cây</th>
                            <th>Nông sản</th>
                            <th>Nguồn gốc</th>
                            <th>Ngày trồng</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var plant in Model)
                        {
                            <tr>
                                <td>@plant.Code</td>
                                <td>@plant.Name</td>
                                <td>@plant.Crop?.Name</td>
                                <td>@plant.Origin?.Name</td>
                                <td>@plant.PlantingDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (plant.IsActive)
                                    {
                                        <span class="badge bg-success">Đang phát triển</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã thu hoạch</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@plant.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 