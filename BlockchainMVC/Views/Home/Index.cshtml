@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-md-6">
            <h1 class="display-4 text-success mb-4">Nông sản Xanh - Truy xuất nguồn gốc minh bạch</h1>
            <p class="lead">Hệ thống quản lý nông sản thông minh với công nghệ blockchain, giúp nông dân quản lý hiệu quả và người tiêu dùng truy xuất nguồn gốc dễ dàng.</p>
            <div class="mt-4">
                <a href="#trace" class="btn btn-success btn-lg me-3">
                    <i class="fas fa-qrcode me-2"></i>Truy xuất nguồn gốc
                </a>
                <a href="#features" class="btn btn-outline-success btn-lg">
                    <i class="fas fa-info-circle me-2"></i>Tìm hiểu thêm
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/images/hero-image.jpg" alt="Nông sản Xanh" class="img-fluid rounded shadow">
        </div>
    </div>

    <!-- Features Section -->
    <div id="features" class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="text-success">Tính năng nổi bật</h2>
            <p class="lead">Giải pháp toàn diện cho nông nghiệp thông minh</p>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body text-center">
                    <i class="fas fa-seedling fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Quản lý cây trồng</h5>
                    <p class="card-text">Theo dõi toàn bộ quá trình sinh trưởng và phát triển của cây trồng.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body text-center">
                    <i class="fas fa-microchip fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Cảm biến thông minh</h5>
                    <p class="card-text">Thu thập dữ liệu môi trường tự động, giúp tối ưu điều kiện canh tác.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body text-center">
                    <i class="fas fa-qrcode fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Truy xuất nguồn gốc</h5>
                    <p class="card-text">Quét mã QR để xem thông tin chi tiết về nguồn gốc nông sản.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Trace Section -->
    <div id="trace" class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="text-success">Truy xuất nguồn gốc</h2>
            <p class="lead">Quét mã QR hoặc nhập mã sản phẩm để xem thông tin chi tiết</p>
        </div>
        <div class="col-md-6 mx-auto">
            <div class="card border-success">
                <div class="card-body">
                    <form asp-controller="Trace" asp-action="Index" method="get">
                        <div class="input-group mb-3">
                            <input type="text" name="code" class="form-control form-control-lg" placeholder="Nhập mã sản phẩm">
                            <button class="btn btn-success" type="submit">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#scanQRModal">
                                <i class="fas fa-qrcode me-2"></i>Quét mã QR
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Farmer Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="text-success">Dành cho nông dân</h2>
            <p class="lead">Đăng ký tài khoản để quản lý nông trại thông minh</p>
        </div>
        <div class="col-md-6 mx-auto">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lý nông trại thông minh</h5>
                    <p class="card-text">Truy cập các tính năng quản lý nông trại, theo dõi cây trồng và tạo mã QR cho sản phẩm.</p>
                    <a href="#" class="btn btn-success">
                        <i class="fas fa-user-plus me-2"></i>Đăng ký tài khoản
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- QR Scanner Modal -->
<div class="modal fade" id="scanQRModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quét mã QR</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="reader"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/html5-qrcode"></script>
    <script>
        function onScanSuccess(decodedText, decodedResult) {
            // Redirect to trace page with the scanned code
            window.location.href = `/Trace?code=${decodedText}`;
        }

        function onScanFailure(error) {
            // Handle scan failure
            console.warn(`QR scan failed: ${error}`);
        }

        let html5QrcodeScanner = new Html5QrcodeScanner(
            "reader",
            { 
                fps: 10,
                qrbox: {width: 250, height: 250},
            },
            false
        );

        html5QrcodeScanner.render(onScanSuccess, onScanFailure);
    </script>
}
