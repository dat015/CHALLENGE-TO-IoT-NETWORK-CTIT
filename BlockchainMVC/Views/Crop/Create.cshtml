@model BlockchainMVC.Models.Crop

@{
    ViewData["Title"] = "Thêm cây trồng mới";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary">Thêm cây trồng mới</h2>
        </div>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Lưu ý:</strong> Thông tin cây trồng sẽ được lưu vào blockchain và không thể sửa đổi sau khi đã lưu.
    </div>

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="sensorId" class="control-label">Cảm biến</label>
                            <select asp-for="sensorId" class="form-select" asp-items="ViewBag.Sensors">
                                <option value="">-- Chọn cảm biến --</option>
                            </select>
                            <span asp-validation-for="sensorId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DatePlanted" class="control-label"></label>
                    <input asp-for="DatePlanted" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DatePlanted" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu vào blockchain
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 