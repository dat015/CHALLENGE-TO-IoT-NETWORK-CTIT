@model IEnumerable<BlockchainMVC.Models.Crop>

@{
    ViewData["Title"] = "Quản lý cây trồng";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-success">
                <i class="fas fa-seedling me-2"></i>Quản lý cây trồng
            </h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Thêm cây trồng mới
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-success">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Sensor)</th>
                                    <th>@Html.DisplayNameFor(model => model.DatePlanted)</th>
                                    <th>@Html.DisplayNameFor(model => model.DateHarvested)</th>
                                    <th>@Html.DisplayNameFor(model => model.Type)</th>
                                    <th>@Html.DisplayNameFor(model => model.Variety)</th>
                                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>
                                            @if (item.Sensor != null)
                                            {
                                                @($"{item.Sensor.Name} ({item.Sensor.SensorCode})")
                                            }
                                            else
                                            {
                                                <span class="text-muted">Chưa gán cảm biến</span>
                                            }
                                        </td>
                                        <td>@(item.DatePlanted?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa trồng")</td>
                                        <td>@(item.DateHarvested?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa thu hoạch")</td>
                                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Variety)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                                        <td>
                                            <span class="badge bg-@(item.Status == "Đang phát triển" ? "success" : 
                                                              item.Status == "Đã thu hoạch" ? "info" : 
                                                              item.Status == "Đã hủy" ? "danger" : "warning")">
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
} 